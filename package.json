{
	"name": "llm-lean-log",
	"version": "0.1.0",
	"private": true,
	"description": "Logging for LLMs, but we cut the fat. A CSV-based logging format optimized for LLM token usage.",
	"workspaces": [
		"packages/*"
	],
	"type": "module",
	"scripts": {
		"dev": "bun run --filter @llm-lean-log/core example",
		"cli": "bun run packages/cli/src/index.ts",
		"fmt": "biome format --write .",
		"lint": "biome lint",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"test:coverage": "bun test --coverage"
	},
	"devDependencies": {
		"@types/bun": "latest"
	},
	"peerDependencies": {
		"typescript": "^5.9.3"
	},
	"keywords": [
		"llm",
		"logging",
		"csv",
		"token-optimization",
		"ai"
	],
	"engines": {
		"bun": ">=1.3.5",
		"npm": "please-use-bun"
	},
	"license": "MIT"
}
